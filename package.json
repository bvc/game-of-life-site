{
  "name": "game-of-life-site",
  "version": "0.0.1",
  "description": "Conway's game of life",
  "author": "bvc",
  "license": "MIT",
  "scripts": {
    "start": "babel-node tools/src-server.js",
    "lint": "esw webpack.config.* src tools --color",
    "lint:watch": "npm run lint -- --watch",
    "remove-dist": "rimraf ./dist",
    "clean-dist": "npm run remove-dist && mkdir dist",
    "prebuild": "npm run clean-dist",
    "build": "babel-node tools/build-prod.js && npm run open:dist",
    "open:src": "babel-node tools/src-server.js",
    "open:dist": "babel-node tools/dist-server.js",
    "test": "mocha tools/test-setup.js \"src/**/*.spec.js\" --reporter progress"
  },
  "dependencies": {
    "bootstrap": "3.3.7",
    "jquery": "3.2.1"
  },
  "devDependencies": {
    "ajv": "5.5.0",
    "autoprefixer": "7.1.6",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "8.0.2",
    "babel-loader": "7.1.2",
    "babel-polyfill": "6.26.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-stage-1": "6.24.1",
    "browser-sync": "2.18.13",
    "chai": "4.1.2",
    "connect-history-api-fallback": "1.5.0",
    "css-loader": "0.28.7",
    "eslint": "4.12.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-watch": "3.1.3",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.5",
    "html-webpack-plugin": "2.30.1",
    "mocha": "4.0.1",
    "node-sass": "4.7.2",
    "postcss-loader": "2.0.9",
    "rimraf": "2.6.2",
    "sass-loader": "6.0.6",
    "sinon": "4.1.2",
    "sinon-chai": "2.14.0",
    "style-loader": "0.19.0",
    "url-loader": "0.6.2",
    "webpack": "3.8.1",
    "webpack-dev-middleware": "1.12.2",
    "webpack-hot-middleware": "2.21.0",
    "webpack-md5-hash": "0.0.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bvc/game-of-life-site"
  }
}
